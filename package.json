{
	"name": "peliculasweb",
	"version": "1.0.0",
	"description": "Sitio web de reseñas de películas con Sass",
	"main": "index.html",
	"scripts": {
		"sass": "sass scss/styles.scss css/styles.css",
		"sass:watch": "sass --watch scss/styles.scss:css/styles.css",
		"sass:build": "sass scss/styles.scss css/styles.css --style=compressed",
		"dev": "sass --watch scss/styles.scss:css/styles.css & python3 -m http.server 8000",
		"build": "sass scss/styles.scss css/styles.css --style=compressed"
	},
	"keywords": [
		"películas",
		"sass",
		"css",
		"web"
	],
	"author": "Andrés Fonseca",
	"license": "MIT",
	"devDependencies": {
		"sass": "^1.69.0"
	}
}
